                                        <div class="gallery-with-thumbs">
                                            <div class="product-full-image main-slider image-popup">

                                                <!-- Slides -->
                                                <div class="swiper-wrapper">
                                                    <figure class="swiper-slide">
                                                        <a href="~/Assets/website/images/products/single/product-1.jpg" data-size="800x800">
                                                            @if (!string.IsNullOrEmpty(Model.Image))
                                                            {
                                                                <img src="@Url.Content(Model.Image)" alt="productImg" />
                                                            }
                                                            <div class="image-overlay"><i class="pe-7s-expand1"></i></div>
                                                        </a>
                                                        <figcaption class="visually-hidden">
                                                            <span>@Html.DisplayFor(model => model.Name)</span>
                                                        </figcaption>
                                                    </figure>
                                                </div>
                                            </div> <!-- end of product-full-image -->

                                            <div class="product-thumb-image pos-r">
                                                <div class="nav-slider">

                                                    <!-- Slides -->
                                                    <div class="swiper-wrapper">
                                                        <div class="swiper-slide">
                                                            @if (!string.IsNullOrEmpty(Model.Image))
                                                            {
                                                                <img src="@Url.Content(Model.Image)" alt="productImg" />
                                                            }
                                                        </div>
                                                        <div class="swiper-slide">
                                                            @if (!string.IsNullOrEmpty(Model.Image))
                                                            {
                                                                <img src="@Url.Content(Model.Image)" alt="productImg" />
                                                            }
                                                        </div>
                                                    </div>

