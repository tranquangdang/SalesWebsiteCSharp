                                                <li class="list-inline-item"><a href="#">Viết nhận xét</a></li>
                                            </ul>
                                        </div>
                                        <div class="product-price">
                                            <p class="d-flex align-items-center">
                                                @{
                                                    var UnitCost = String.Format("{0:#,##0₫}", Model.UnitCost);
                                                }
                                                <span class="price-old">
                                                    @Html.DisplayFor(model => UnitCost)
                                                </span>
                                                <span class="price-new">
                                                    @Html.DisplayFor(model => UnitCost)
                                                </span>
                                                <span class="price-discount">-0%</span>
                                            </p>
                                        </div>
