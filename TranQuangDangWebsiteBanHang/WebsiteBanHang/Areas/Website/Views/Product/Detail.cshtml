<!-- Start of Breadcrumbs -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12">
                <nav class="breadcrumb">
                    <a class="breadcrumb-item" href="@Url.Action("Index", "Home")">Trang chủ</a>
                    <a class="breadcrumb-item" href="@Url.Action("List", "Product", new { @CategoryID = 0})">Danh sách sản phẩm</a>
                    <span class="breadcrumb-item active">@Html.DisplayFor(model => model.Name)</span>
                </nav>
            </div>
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</div>
<!-- End of Breadcrumbs -->
